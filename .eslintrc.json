{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "no-plusplus": "warn",
    "prettier/prettier": ["error"],
    "linebreak-style": ["off", "windows"],
    "no-restricted-globals": "off",
    "no-console": "off",
    "no-restricted-syntax": ["error", "WithStatement"]
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  }
}
